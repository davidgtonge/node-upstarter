# {{name}}.conf

description "{{description}}"

start on {{start}}
stop on {{stop}}
{{#if user}}
setuid {{user}}
{{/if}}
{{#if files}}
limit nofile {{files}} {{files}}
{{/if}}
{{#if log}}
console log
{{/if}}
script
  {{#if cwd}}
  mkdir -p {{cwd}}
  cd {{cwd}}
  {{/if}}
  set -e
  mkfifo /tmp/{{name}}-log-fifo
  ( logger -t {{name}} </tmp/{{name}}-log-fifo & )
  exec >/tmp/{{name}}-log-fifo
  rm /tmp/{{name}}-log-fifo
  exec {{cmd}} 2>/dev/null
end script
{{#if respawn}}
respawn
{{/if}}
